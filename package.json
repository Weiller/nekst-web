{
  "name": "nekst-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "react-test-renderer": "^16.8.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },

  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.7.0",
    "jest-junit": "^3.6.0"
  },

  "jest": {
    "collectCoverageFrom": [
      "src/web/app/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!build/**"
    ],

    "coverageReporters": [
      "lcov",
      "text"
    ],

    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 50,
        "functions": 100,
        "lines": 100
      }
    }
  },

  "jest-junit": {
    "output": "test-results/test-report.junit.xml"
  }
}
